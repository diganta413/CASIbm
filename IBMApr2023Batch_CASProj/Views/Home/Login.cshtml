@model IBMApr2023Batch_CASProj.Models.LoginViewModel

@{
    Layout = null;
}


<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    
</head>

<body>
    <img src="~/Images/ClinicImg.jpg" style="position: absolute;width: 100%;height: 100%;z-index: 0;top: 0;left: 0"/>
    <div>
        
        <div class="login-container" style="margin: auto;width: 35%;margin-top: 10%;z-index: 100;position: relative;background-color: white;opacity: 0.8;padding: 3%;border-radius:25px">
            <h3 style="margin-left: 38%;margin-bottom: 20px;font-weight: bolder;font-size: 30px">Login</h3>
            @using (Html.BeginForm())
            {
                <div class="mb-2 row">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-sm-3 col-form-label fw-bolder" })

                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "User Name *" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="mb-3 row">
                    @Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "col-sm-3 col-form-label fw-bolder" })

                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control ml-10", placeholder = "Password *", type = "password" } })
                        @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="btn btn-success" style="margin-left: 40%">Login</button>
                <a href="#" value="Login" style="display: block;margin-left: 35%;margin-top: 20px">Forget Password?</a>
            }
        </div>
    </div>
</body>
</html>