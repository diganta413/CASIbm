@model IEnumerable<IBMApr2023Batch_CASProj.Models.SecurityModel.Drug>

@{
    
    Layout = null;
}

@{
    var actionName = @ViewContext.RouteData.Values["action"].ToString();
}
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <link href="~/CSS/Doctor.css" rel="stylesheet" />
    
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="z-index: 2; box-shadow: 0 2px 4px 0 rgba(0,0,0,.2)">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="font-weight: bolder;font-size: 25px;">CAS Doctor</a>

        </div>
        <form role="search" action="@Url.Action("Logout","Home")" style="margin-block-end: 0;">
            <button type="submit" class="btn btn-danger" style="margin-right: 20px">Logout</button>
            </form>
</nav>
    <!-- Sidebar -->
    <div id="mySidenav" class="sidenav">
        <a class="nav-link" aria-current="page" href="@Url.Action("ListPatients","Doctor")" style="margin-top: 20px;" >Patients</a>
        <a class="nav-link active" href="@Url.Action("Inventory","Doctor")" >Inventory</a>
    </div>
    <div class="content">
        <h3 style="margin-top: 50px;margin-bottom: 2%">Inventory</h3>

        <div class="list">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DrugName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DrugExpiry)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DrugDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DrugType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DrugDosage)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="data_row">
                        <td>
                            @Html.DisplayFor(modelItem => item.DrugName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DrugExpiry)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DrugDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DrugType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DrugDosage)
                        </td>
                        
                    </tr>
                }

            </table>
        </div>
        <form style="margin-left: 70%;margin-top: 2%">
            <button type="submit" class="btn btn-primary">Place a new Order</button>
        </form>
    </div>
    
</body>
</html>
