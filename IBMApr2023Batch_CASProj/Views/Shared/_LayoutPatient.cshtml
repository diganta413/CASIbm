<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="https://kit.fontawesome.com/ff0e7d4c8a.js" crossorigin="anonymous"></script>
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>

    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="@Url.Action("Index","Admin")" class="logo" style="text-decoration:none;">

                    <img src="~/Content/logoclinic.jpg" alt="CAS" />Clinic Automation System-Patient
                </a>
            </div>

            <ul class="nav user-menu">

                <li class="nav-item">
                    <form class="d-flex" role="search" action="@Url.Action("Logout","Home")">
                        @* @if(User.Identity.IsAuthenticated)  {}  *@
                        <button class="btn btn-outline-success" type="submit">Logout @User.Identity.Name</button>
                    </form>

                </li>
            </ul>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li class="submenu">
                            <a href="@Url.Action("Index","Patient")"><i class="fa-solid fa-user"></i> <span>Patient Details</span> </a>
                        </li>
                        @*<li class="submenu">
                            <a href="@Url.Action("EditPatient",new { id = Model.PatientId })"><i class="fa-solid fa-bed"></i> <span>Edit Patient</span> </a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </div>


        <script src="~/Scripts/jquery-3.6.4.js"></script>
        <script src="~/Scripts/script.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery-3.6.4.slim.min.js"></script>


        <div class="page-wrapper">
            <div class="content container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
