@model IBM_CAS.Models.SecuritydbModel.Doctor

@{
    ViewBag.Title = "UpdateDoctorStatus";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>UpdateDoctorStatus</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Doctor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DoctorId)

        

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DoctorStatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DoctorStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-dark" style="margin-right:10px;" />
                <button class="btn btn-dark">@Html.ActionLink("Back to List", "ListDoctor", null, new { @style = "text-decoration:none;color:white;" })</button>

            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
