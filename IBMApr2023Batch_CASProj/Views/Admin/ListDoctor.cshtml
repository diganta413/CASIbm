@model IEnumerable<IBMApr2023Batch_CASProj.Models.SecurityModel.Doctor>

@{
    ViewBag.Title = "ListDoctor";
}

<h2>ListDoctor</h2>

<p>
    @Html.ActionLink("Create New", "AddNewDoctor")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorSpec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorSpec)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditDoctor", new { id=item.DoctorId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DoctorId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DoctorId })
        </td>
    </tr>
}

</table>
